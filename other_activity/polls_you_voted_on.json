{
	"$schema": "http://json-schema.org/draft-04/schema",

	"definitions": {
		"vote": {
			"type": "object",

			"title": "Facebook Poke",
			"event": "web:facebook:polls:vote",

			"properties": {
				"title": { "type": "string" },
				"timestamp": { "type": "integer" },
				"attachments": {
					"type": "array",

					"items": {
						"type": "object",

						"properties": {
							"data": {
								"type": "array",

								"items": {
									"type": "object",

									"properties": {
										"poll":{
											"type": "object",

											"properties": {
												"options": {
													"type": "array",

													"items": {
														"type": "object",

														"properties": {
															"option": { "type": "string" },
															"voted": { "type": "boolean" }
														},
														"required": [ "option", "voted" ],
														"additionalProperties": false
													},
													"minItems": 1,
													"maxItems": 1
												}
											},
											"required": [ "options" ],
											"additionalProperties": false
										}
									},
									"required": [ "poll" ],
									"additionalProperties": false
								},
								"minItems": 1,
								"maxItems": 1
							}
						},
						"required": [ "data" ],
						"additionalProperties": false
					},
					"minItems": 1,
					"maxItems": 1
				}
			},
			"required": [ "title", "timestamp", "attachments" ],
			"additionalProperties": false
		}
	},

	"type": "object",

	"properties": {
		"poll_votes": {
			"type": "array",

			"items": {
				"$ref": "#/definitions/vote"
			}
		}	
	},
	"required": [ "poll_votes" ],
	"additionalProperties": false
}
