{
	"$schema": "http://json-schema.org/draft-04/schema",

	"definitions": {
		"entry": {
			"type": "object",

			"title": "Facebook Location History",
			"event": "web:facebook:location:history",

			"properties": {
				"title": { "type": "string" },
				"timestamp": { "type": "integer" },
				"attachments": {
					"type": "array",

					"items": {
						"type": "object",

						"properties": {
							"data": {
								"type": "array",

								"items": {
									"type": "object",

									"properties": {
										"place": {
											"$ref": "http://localhost:8080/_partials/coordinate.json"
										}
									},
									"required": [ "place" ],
									"additionalProperties": false
								}
							}
						},
						"required": [ "data" ],
						"additionalProperties": false
					}
				}
			},
			"required": [ "title", "timestamp", "attachments" ],
			"additionalProperties": false
		}
	},

	"type": "object",

	"properties": {
		"location_history": {
			"type": "array",
			
			"items": {
				"$ref": "#/definitions/entry"
			}
		}
	},
	"required": [ "location_history" ],
	"additionalProperties": false
}
