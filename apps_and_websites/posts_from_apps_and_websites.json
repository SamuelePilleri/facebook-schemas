{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",

	"properties": {
		"app_posts": {
			"type": "array",

			"items": {
				"type": "object",

				"title": "Facebook App Post",
				"event": "web:facebook:apps:post",

				"properties": {
					"title": {
						"$ref": "http://localhost:8080/posts/your_posts.json#/definitions/post/properties/title"
					},
					"timestamp": {
						"$ref": "http://localhost:8080/posts/your_posts.json#/definitions/post/properties/timestamp"
					},
					"data": {
						"$ref": "http://localhost:8080/posts/your_posts.json#/definitions/post/properties/data"
					},
					"attachments": {
						"$ref": "http://localhost:8080/posts/your_posts.json#/definitions/post/properties/attachments"
					}
				},
				"required": [ "timestamp" ],
				"additionalProperties": false
			}
		}
	},
	"required": [ "app_posts" ],
	"additionalProperties": false
}
