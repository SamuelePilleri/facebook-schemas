{
	"$schema": "http://json-schema.org/draft-04/schema",

	"definitions": {
		"page": {
			"type": "object",

			"title": "Facebook Page Created",
			"event": "web:facebook:page_created",

			"properties": {
				"name": { "type": "string" },
				"timestamp": { "type": "integer" }
			},
			"required": [ "name", "timestamp" ],
			"additionalProperties": false
		}
	},

	"type": "object",

	"properties": {
		"pages": {
			"type": "array",
			
			"items": {
				"$ref": "#/definitions/page"
			}
		}
	},
	"required": [ "pages" ],
	"additionalProperties": false
}
