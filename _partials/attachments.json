{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "array",

	"items": {
		"type": "object",

		"properties": {
			"data": {
				"type": "array",

				"items": {
					"anyOf": [
						{
							"type": "object",

							"properties": {
								"external_context": {
									"type": "object",

									"properties": {
										"name": { "type": "string" },
										"source": { "type": "string" },
										"url": { "type": "string" }
									},
									"minProperties": 1,
									"additionalProperties": false
								}
							},
							"required": [ "external_context" ],
							"additionalProperties": false
						},
						{
							"type": "object",

							"properties": {
								"media": {
									"$ref": "http://localhost:8080/_partials/media.json"
								}
							},
							"required": [ "media" ],
							"additionalProperties": false
						},
						{
							"type": "object",

							"properties": {
								"for_sale_item": {
									"$ref": "http://localhost:8080/_partials/marketplace.json#/definitions/for_sale_item"
								}
							},
							"required": [ "for_sale_item" ],
							"additionalProperties": false
						},
						{
							"type": "object",

							"properties": {
								"place": {
									"$ref": "http://localhost:8080/_partials/coordinate.json"
								}
							},
							"required": [ "place" ],
							"additionalProperties": false
						},
						{
							"type": "object",

							"properties": {
								"event": {
									"type": "object",

									"properties": {
										"name": { "type": "string" },
										"start_timestamp": { "type": "integer" },
										"end_timestamp": { "type": "integer" }
									},
									"required": [ "name", "start_timestamp", "end_timestamp" ],
									"additionalProperties": false
								}
							},
							"required": [ "event" ],
							"additionalProperties": false
						}
					]
				}
			}
		},
		"required": [ "data" ],
		"additionalProperties": false
	}
}
