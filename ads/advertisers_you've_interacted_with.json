			"required": [ "action", "timestamp" ],
			"additionalProperties": false
		}
	},

	"type": "object",

	"properties": {
		"topics": {
			"type": "array",
			"maxItems": 0
		},
		"custom_audiences": {
			"type": "array",
			"maxItems": 0
		},
		"lead_gen_info": {
			"type": "array",
			"maxItems": 0
		},
		"history": {
			"type": "array",

			"items": {
				"$ref": "#/definitions/history"
			}
		}
	},
	"required": [ "topics", "custom_audiences", "lead_gen_info", "history" ],
	"additionalProperties": false
}
