{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",

	"properties": {
		"participants": {
			"type": "array",

			"items": {
				"type": "object",

				"properties": {
					"name": { "type": "string" }
				},
				"required": [ "name" ],
				"additionalProperties": false
			}
		},
		"messages": {
			"type": "array",

			"items": {
				"type": "object",

				"properties": {
					"sender_name": { "type": "string" },
					"timestamp_ms": { "type": "integer" },
					"content": { "type": "string" },
					"type": { "type": "string" },
					"call_duration": { "type": "integer" },
					"missed": { "type": "boolean" },
					"files": {
						"type": "array",

						"items": {
							"type": "object",

							"properties": {
								"uri": { "type": "string" },
								"creation_timestamp": { "type": "integer" }
							},
							"required": [ "uri" ],
							"additionalProperties": false
						}
					},
					"photos": {
						"type": "array",

						"items": {
							"type": "object",

							"properties": {
								"uri": { "type": "string" },
								"creation_timestamp": { "type": "integer" }
							},
							"required": [ "uri" ],
							"additionalProperties": false
						}
					},
					"videos": {
						"type": "array",

						"items": {
							"type": "object",

							"properties": {
								"uri": { "type": "string" },
								"creation_timestamp": { "type": "integer" },
								"thumbnail": {
									"type": "object",

									"properties": {
										"uri": { "type": "string" }
									},
									"required": [ "uri" ],
									"additionalProperties": false
								}
							},
							"required": [ "uri" ],
							"additionalProperties": false
						}
					},
					"audio_files": {
						"type": "array",

						"items": {
							"type": "object",

							"properties": {
								"uri": { "type": "string" },
								"creation_timestamp": { "type": "integer" }
							},
							"required": [ "uri" ],
							"additionalProperties": false
						}
					},
					"share": {
						"type": "object",

						"properties": {
							"link": { "type": "string" }
						},
						"required": [ "link" ],
						"additionalProperties": false
					},
					"sticker": {
						"type": "object",

						"properties": {
							"uri": { "type": "string" }
						},
						"required": [ "uri" ],
						"additionalProperties": false
					},
					"gifs": {
						"type": "array",

						"items": {
							"type": "object",

							"properties": {
								"uri": { "type": "string" }
							},
							"required": [ "uri" ],
							"additionalProperties": false
						}
					},
					"reactions": {
						"type": "array",

						"items": {
							"type": "object",

							"properties": {
								"reaction": { "type": "string" },
								"actor": { "type": "string" }
							},
							"required": [ "reaction", "actor" ],
							"additionalProperties": false
						}
					},
					"users": {
						"type": "array",

						"items": {
							"type": "object",

							"properties": {
								"name": { "type": "string" }
							},
							"required": [ "name" ],
							"additionalProperties": false
						}
					}
				},
				"required": [ "timestamp_ms", "type" ],
				"additionalProperties": false
			}
		},
		"title": { "type": "string" },
		"is_still_participant": { "type": "boolean" },
		"thread_type": { "type": "string" },
		"thread_path": { "type": "string" }
	},
	"required": [ "participants", "messages", "is_still_participant", "thread_type", "thread_path" ],
	"additionalProperties": false
}
